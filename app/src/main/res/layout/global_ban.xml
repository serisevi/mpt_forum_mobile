<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/chGlobalBanAuth"
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Блокировка авторизации"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/chGlobalBanWrite"
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Блокировка отправки сообщений"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvGlobalBanDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Дата окончания блокировки:"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editGlobalBanDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="гггг-мм-дд"
        android:textColorHint="#808080"
        android:textAlignment="center"
        android:inputType="date"/>

</LinearLayout>